.agreable-promo__label
  font-weight bold
  margin-bottom 5px

.agreable-promo__input
  border-style solid
  border-width 1px
  box-sizing border-box
  font-size 16px
  font-weight 100
  outline none
  min-width 100%
  padding 10px
  position relative
  width 100%
  &--invalid
    border-color red
  &--valid
    border-color green
