<style>


    {#
        Configurable CSS values provided through WP settings panel.
        Overrides values in common CSS.
    #}
    .answer {
      background-color: {{ plugin_settings_property_primary_colour|default('ff00ff') }};
      color: {{ plugin_settings_property_secondary_colour|default('black') }};
      font-family: {{ plugin_settings_property_font_family }};
    }

    {# Free text CSS also provided through WP settings panel. #}
    {% filter raw %}
      {{ plugin_settings_free_text}}
    {% endfilter %}

</style>

{% if env == "development" %}

  <hr style="border: solid 1px red; ">
  <script src="http://localhost:{{ webpack_port }}/static/app.js"></script>

{% else %}

  <script>
    {{js_string|raw}}
  </script>

{% endif %}

